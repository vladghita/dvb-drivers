	tristate "Sony CXD2841ER"
	depends on DVB_CORE && I2C
	default m if !MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y when you want to support this frontend.

# DVB_RTL2830 disabled for insufficient kernel version
config DVB_RTL2830
	tristate "Realtek RTL2830 DVB-T"
	depends on DVB_CORE && I2C && I2C_MUX
	select REGMAP
	default n
	depends on VIDEO_KERNEL_VERSION
	---help---
	  WARNING! This driver needs at least kernel 3.8.0!  It may not
	  compile or work correctly on your kernel, which is too old.

	  Say Y when you want to support this frontend.

# DVB_RTL2832 disabled for insufficient kernel version
config DVB_RTL2832
	tristate "Realtek RTL2832 DVB-T"
	depends on DVB_CORE && I2C && I2C_MUX
	select REGMAP
	default n
	depends on VIDEO_KERNEL_VERSION
	---help---
	  WARNING! This driver needs at least kernel 3.8.0!  It may not
	  compile or work correctly on your kernel, which is too old.

	  Say Y when you want to support this frontend.

config DVB_RTL2832_SDR
	tristate "Realtek RTL2832 SDR"
	depends on DVB_CORE && I2C && I2C_MUX && VIDEO_V4L2 && MEDIA_SDR_SUPPORT && USB
	select DVB_RTL2832
	select VIDEOBUF2_VMALLOC
	default m if !MEDIA_SUBDRV_AUTOSELECT
	help
	  Say Y when you want to support this SDR module.

