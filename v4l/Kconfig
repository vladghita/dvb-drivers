	  module will be called ths8200.

comment "Camera sensor devices"

# VIDEO_APTINA_PLL disabled for insufficient kernel version
config VIDEO_APTINA_PLL
	tristate

# VIDEO_SMIAPP_PLL disabled for insufficient kernel version
config VIDEO_SMIAPP_PLL
	tristate

# VIDEO_OV2659 disabled for insufficient kernel version
config VIDEO_OV2659
	tristate "OmniVision OV2659 sensor support"
	depends on VIDEO_V4L2 && I2C
	depends on MEDIA_CAMERA_SUPPORT
	default n
	depends on VIDEO_KERNEL_VERSION
	---help---
	  WARNING! This driver needs at least kernel 3.5.0!  It may not
	  compile or work correctly on your kernel, which is too old.

	  This is a Video4Linux2 sensor-level driver for the OmniVision
	  OV2659 camera.

	  To compile this driver as a module, choose M here: the
	  module will be called ov2659.

config VIDEO_OV7640
	tristate "OmniVision OV7640 sensor support"
	depends on I2C && VIDEO_V4L2
	depends on MEDIA_CAMERA_SUPPORT
	---help---
	  This is a Video4Linux2 sensor-level driver for the OmniVision
	  OV7640 camera.

	  To compile this driver as a module, choose M here: the
	  module will be called ov7640.

config VIDEO_OV7670
	tristate "OmniVision OV7670 sensor support"
	depends on I2C && VIDEO_V4L2
	depends on MEDIA_CAMERA_SUPPORT
	---help---
	  This is a Video4Linux2 sensor-level driver for the OmniVision
	  OV7670 VGA camera.  It currently only works with the M88ALP01
	  controller.

# VIDEO_OV9650 disabled for insufficient kernel version
config VIDEO_OV9650
	tristate "OmniVision OV9650/OV9652 sensor support"
	depends on I2C && VIDEO_V4L2 && VIDEO_V4L2_SUBDEV_API
	default n
	depends on VIDEO_KERNEL_VERSION
	---help---
	  WARNING! This driver needs at least kernel 3.5.0!  It may not
	  compile or work correctly on your kernel, which is too old.

	  This is a V4L2 sensor-level driver for the Omnivision
	  OV9650 and OV9652 camera sensors.

# VIDEO_VS6624 disabled for insufficient kernel version
config VIDEO_VS6624
	tristate "ST VS6624 sensor support"
	depends on VIDEO_V4L2 && I2C
	depends on MEDIA_CAMERA_SUPPORT
	default n
	depends on VIDEO_KERNEL_VERSION
	---help---
